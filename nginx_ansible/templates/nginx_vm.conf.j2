user www-data;
worker_processes auto;
events {
    worker_connections 768;
}

http {
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    server {
        listen 80;
        server_name {{ vm_server }};
        location / {
            root /var/www/html;
            index index.html;
        }
    }

    include /etc/nginx/conf.d/*.conf;
}

